@model MapEventModel

<form method="post" asp-action="DeletePOST">
	<input asp-for="Name" hidden>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete MapEvent</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Name">Name</label>
			<input asp-for="Name" disabled class="form-control"/>
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px  ">Delete</button>
		<a asp-controller="MapEvent" asp-action="Index" class="btn btn-secondary" style="width:150px">Return</a>
	</div>
</form>